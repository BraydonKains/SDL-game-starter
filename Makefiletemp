C := g++
SRC_DIR := src
OBJ_DIR := obj
ENG_DIR := $(SRC_DIR)/engine
SCR_DIR := $(SRC_DIR)/screens

SRC_FILES := $(wildcard $(SRC_DIR)/*.cpp) $(wildcard $(ENG_DIR)/*.cpp)
OBJ_FILES := $(wildcard $(OBJ_DIR)/*.o)
LDFLAGS := -L/usr/lib -lSDL2
CPPFLAGS :=
CXXFLAGS := 

main: $(OBJ_FILES)
	$(C) $(LDFLAGS) $(OBJ_FILES) -o $@ $^

$(OBJ_DIR)/%.o: $(SRC_DIR)/%.cpp
	$(C) $(CPPFLAGS) $(CXXFLAGS) -c -o $@ $<

# Engine files rule

$(OBJ_DIR)/%.o: $(ENG_DIR)/%.cpp
	$(C) $(CPPFLAGS) $(CXXFLAGS) -c -o $@ $<
